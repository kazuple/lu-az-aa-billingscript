{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccounts_LU_AA_BillingScript_name": {
            "defaultValue": "LU-AA-BillingScript",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2021-06-22",
            "name": "[parameters('automationAccounts_LU_AA_BillingScript_name')]",
            "location": "uksouth",
            "properties": {
                "sku": {
                    "name": "Basic"
                },
                "encryption": {
                    "keySource": "Microsoft.Automation",
                    "identity": {}
                }
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/jobSchedules",
            "apiVersion": "2020-01-13-preview",
            "name": "[concat(parameters('automationAccounts_LU_AA_BillingScript_name'), '/cc860ca1-0cec-4cb9-a1da-4854e8ace15d')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccounts_LU_AA_BillingScript_name'))]"
            ],
            "properties": {
                "runbook": {
                    "name": "billingscript"
                },
                "schedule": {
                    "name": "LoopUp Billing Script Schedule"
                }
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/runbooks",
            "apiVersion": "2019-06-01",
            "name": "[concat(parameters('automationAccounts_LU_AA_BillingScript_name'), '/billingscript')]",
            "location": "uksouth",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccounts_LU_AA_BillingScript_name'))]"
            ],
            "properties": {
                "runbookType": "PowerShell",
                "logVerbose": true,
                "logProgress": false,
                "logActivityTrace": 0
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/schedules",
            "apiVersion": "2020-01-13-preview",
            "name": "[concat(parameters('automationAccounts_LU_AA_BillingScript_name'), '/LoopUp Billing Script Schedule')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccounts_LU_AA_BillingScript_name'))]"
            ],
            "properties": {
                "description": "Runs the LoopUp Cloud Telephony billing script each month on the 30th at 0300 UK time.",
                "startTime": "2022-01-27T16:11:00+00:00",
                "expiryTime": "9999-12-31T23:59:00+00:00",
                "interval": 1,
                "frequency": "Month",
                "timeZone": "Europe/London",
                "advancedSchedule": {
                    "monthDays": [
                        30
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2020-01-13-preview",
            "name": "[concat(parameters('automationAccounts_LU_AA_BillingScript_name'), '/luServiceAccountPassword')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccounts_LU_AA_BillingScript_name'))]"
            ],
            "properties": {
                "isEncrypted": true,
                "description": "LoopUp Service Account: Password"
            }
        },
        {
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2020-01-13-preview",
            "name": "[concat(parameters('automationAccounts_LU_AA_BillingScript_name'), '/luServiceAccountUsername')]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccounts_LU_AA_BillingScript_name'))]"
            ],
            "properties": {
                "isEncrypted": false,
                "description": "LoopUp Service Account: Username"
            }
        }
    ]
}